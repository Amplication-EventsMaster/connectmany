datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Customer {
  createdAt      DateTime @default(now())
  favoriteColors Color[]  @relation(name: "favoriteColors")
  id             String   @id @default(cuid())
  likedColors    Color[]  @relation(name: "ColorLikedColorsCustomerLikedColors")
  updatedAt      DateTime @updatedAt
  user           User?    @relation(fields: [userId], references: [id])
  userId         String?
}

model Color {
  createdAt     DateTime  @default(now())
  customers     Customer? @relation(name: "favoriteColors", fields: [customersId], references: [id])
  customersId   String?
  id            String    @id @default(cuid())
  likedColors   Customer? @relation(name: "ColorLikedColorsCustomerLikedColors", fields: [likedColorsId], references: [id])
  likedColorsId String?
  updatedAt     DateTime  @updatedAt
}

model User {
  createdAt DateTime   @default(now())
  customers Customer[]
  firstName String?
  id        String     @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime   @updatedAt
  username  String     @unique
}
